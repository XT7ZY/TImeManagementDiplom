@model TImeManagement.Models.Event

@{
    ViewData["Title"] = "Start";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="p-5">
    <div class="card">
        <div class="card-body p-0">
            <div id="calendar"></div>
        </div>
    </div>
</div>

<!-- calendar modal -->
<div id="modal-view-event" class="modal modal-top fade calendar-modal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <h4 class="modal-title"><span class="event-icon"></span><span class="event-title"></span></h4>
                <div class="event-body"></div>
            </div>
            <div class="modal-footer">
                @if (User.IsInRole("2") || User.IsInRole("1"))
                {
                    <button id="btnDeleteEvent" type="button" class="btn btn-danger pull-left">Удалить</button>
                }
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>
 
@if (User.IsInRole("2") || User.IsInRole("1"))
{
    <div id="modal-view-event-add" class="modal modal-top fade calendar-modal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="EmployerId" class="control-label">Сотрудник</label>
                        <select asp-for="EmployerId" class="form-control" asp-items="ViewBag.EmployerId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="EventDay" class="control-label">День</label>
                        <input asp-for="EventDay" class="form-control" />
                        <span asp-validation-for="EventDay" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Создать" asp-controller="Events" asp-action="Create" class="btn btn-primary"/>
                        <button type="button" class="btn btn-primary pull-right" data-bs-dismiss="modal">Закрыть</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
