<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Колобок</title>
    <script src="~/js/Calendar.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/headerTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TImeManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />


    <link href="//fonts.googleapis.com/css?family=Nunito:400,600,700&display=swap" rel="stylesheet">

    
    <link rel="stylesheet" href="//maxcdn.icons8.com/fonts/line-awesome/1.1/css/line-awesome-font-awesome.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/air-datepicker/2.2.3/css/datepicker.css" />





    <link rel="stylesheet" href="~/css/Calendar.css" />



</head>
<body>
    <partial name="_Notification" />
    <header class="p-1 mb-1 border-bottom">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">

                <a asp-controller="Home" asp-action="Start" class="d-flex mb-md-0 align-items-center mb-2 mr text-dark text-decoration-none font-size link-dark">Мой график</a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    @if (User.IsInRole("1") || User.IsInRole("2"))
                    {
                        <li><a asp-controller="Employers" asp-action="Index" class="nav-link px-2 link-dark">список пользоваетелей</a></li>
                    }
                    @if (User.IsInRole("1") || User.IsInRole("2"))
                    {
                        <li><a asp-controller="Bids" asp-action="Index" class="nav-link px-2 link-dark">заявки</a></li>
                    }
                    @if (User.IsInRole("3") || User.IsInRole("4") || User.IsInRole("5") || User.IsInRole("6"))
                    {
                        <li><a asp-controller="Bids" asp-action="Index" class="nav-link px-2 link-dark">мои заявки</a></li>
                    }
                </ul>

                <div class="dropdown text-end">
                    <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                            </svg>
                        </span>
                    </a>
                    <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">
                        <li><a class="dropdown-item">@User.Identity.Name</a></li>
                        @if (User.IsInRole("3") || User.IsInRole("4") || User.IsInRole("5") || User.IsInRole("6"))
                        {
                        <li><a asp-controller="Bids" asp-action="Create" class="dropdown-item" onclick="register()">Cоздать заявку</a></li>
                        }
                        <li><a class="dropdown-item" onclick="changePassword()" >Изменить пароль</a></li>
                        @if (User.IsInRole("1") || User.IsInRole("2"))
                        {
                        <li><a class="dropdown-item" onclick="register()">Добавить пользователя</a></li>
                        }
                        <li><hr class="dropdown-divider"></li>
                        <li><a asp-controller="Account" asp-action="Logout" class="dropdown-item">Выйти</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="modal fade" id="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Колобок</h5>
                    <button type="button" class="btn btn-close btn-secondary" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/ChangePassword.js"></script>
    <script src="~/js/ChangePasswordConfirm.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    
    <script src="//cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.9.0/fullcalendar.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.9.0/locale/ru.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/air-datepicker/2.2.3/js/datepicker.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/air-datepicker/2.2.3/js/i18n/datepicker.en.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/lang/ru.js"></script>


    <script src="~/js/Calendar.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
