@model TImeManagement.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "Авторизация";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Колобок</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TImeManagement.styles.css" asp-append-version="true" />
</head>
<body>
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">
                            <form method="post" asp-controller="Account" asp-action="Login">
                                <h2 class="fw-bold mb-2 text-uppercase">Колобок</h2>
                                <p class="text-white-50 mb-5">Вход в учетную систему</p>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Login" id="typeEmailX" class="form-control form-control-lg" />
                                    <label class="form-label" for="typeEmailX">Логин</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Password" id="typePasswordX" class="form-control form-control-lg" />
                                    <label class="form-label" for="typePasswordX">Пароль</label>
                                </div>

                                <button class="btn btn-outline-light btn-lg px-5" type="submit">Авторизироваться</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</body>
</html>